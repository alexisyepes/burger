<div class="container">

    <div class="jumbotron" id="topContainer">
        <div class="row">
            <div class="col-md-5">
                <img src="/assets/css/img/burgerLogo.png" id="burgerLogo">
            </div>
            <div class="col-md-7" id="topRightBox">
                <h1 id="mainTitle">Make burgers... eat burgers.</h1>
                <br>
                <panel>
                    <form class="create-form">
                        <div class="form-group">
                            <label for="newburger" id="addBurgerLabel">Add a New Burger to the menu:</label>
                            <input type="text" id="newburger" name="burger" onClick="return empty()">
                            {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                            <button type="submit" class="btn btn-success" id="addburger"><span
                                    class="fa fa-thumbs-up fa-3x"></span></button>
                        </div>
                    </form>
                </panel>
            </div>
        </div>
        <!--/row-->
    </div><!-- /jumbotron -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-md-12" id="topHead">
            <div class="col-md-8">
                <h1 id="topHeadHeading">To devour a Burger, press the <i class="fas fa-utensils" id="utensilsIcon"></i>
                    icon next to the burger.</h1>
                <h1>To delete the devoured burgers, press the <span class="fa fa-trash" id="trashIcon"></span> icon next
                    to it</h1>
            </div>
            <div class="col-md-4">
                <img src="/assets/css/img/burgerPic.jpeg" id="burgerPic">
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel-heading" id="leftHead"><strong>New Burgers Menu</strong></div>
            <div class="panel panel-default" id="panelBottom">
                <div class="panel-body" id="menuListLeft">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><i class="fas fa-utensils fa-2x"></i></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel-heading" id="rightHead"><strong>Devoured Burgers</strong></div>
            <div class="panel panel-default" id="panelBottomLeft">
                <div class="panel-body" id="menuList">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash fa-2x"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->
</div><!-- /container -->

