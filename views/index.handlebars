<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h1 id="modalTitle">Your burger has been added to the Menu!</h1>
    <img src="/assets/css/img/burgerModal.png">
  </div>

</div>